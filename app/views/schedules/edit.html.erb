<h1>スケジュール編集</h1>

<%= form_with model: @schedule  do |f| %>
<%= render 'layouts/error_messages', model: f.object %>

  <div>
    <%= f.label :movie_id, '映画ID' %>
    <%= f.collection_select :movie_id, Movie.all, :id, :id %>
  </div>
  
  <div>
    <%= f.label :start_time, '開始日時' %>
    <%= f.datetime_select :start_time %>
  </div>

  <div>
    <%= f.label :end_time, '終了時刻' %>
    <%= f.datetime_select :end_time %>
  </div>


  <%= f.submit '作成' %>
<% end %>

<%= link_to schedule_path(@schedule), method: :delete, data: {confirm: "本当に削除してよろしいですか？"} do %>
  この写真を削除する
<% end %>