<%= form_with model: @reservation, local: true do |f| %>
<%= render 'layouts/error_messages', model: f.object %>

  <div>
    <%= f.label :movie_id, "選択中の映画【#{@movie.name}】" %>
  </div>
  
  <div>
    <%= f.label :date, "選択中の日時【#{@date}】" %>
    <%= f.hidden_field :date, :value => @date %>
  </div>

  <div>
    <%= f.label :sheet_id, "選択中のsheet_id【#{@sheet.id}】" %>
    <%= f.hidden_field :sheet_id, :value => @sheet.id %>
  </div>

  <div>
    <%= f.label :schedule_id, "選択中のschedule_id【#{@schedule}】" %>
    <%= f.hidden_field :schedule_id, :value => @schedule %>
  </div>
  
  <div>
    <%= f.label :name, '予約者氏名' %>
    <%= f.text_field :name, value: @user.name %>
  </div>

  <div>
    <%= f.label :email, 'メールアドレス' %>
    <%= f.email_field :email, value: @user.email %>
  </div>

  <div>
    <%= f.hidden_field :user_id, value: @user.id %>
  </div>


  <%= f.submit '予約' %>
<% end %> 
